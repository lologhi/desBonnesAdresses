<!DOCTYPE html>
<!--[if IE 9]><html class="lt-ie10" lang="en" > <![endif]-->
<html class="no-js" lang="fr" >
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="google-site-verification" content="oAVB5I8P5jphS5McZPl0u8Q8XtBGCEIPQ2fbhEHnw-U" />
        <title>{% block title %}Des bonnes adresses Parisiennes{% endblock %}</title>
        <meta name="description" content="{% block description %}Une sélection de mes adresses préférées à Paris. Restaurants, bars à vin, pubs, cafés...{% endblock %}" />
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        {% block stylesheets %}
            {% stylesheets
                '%kernel.root_dir%/../web/vendor/foundation/css/normalize.css'
                '%kernel.root_dir%/../web/vendor/foundation/css/foundation.css'
				'https://api.tiles.mapbox.com/mapbox.js/v2.1.4/mapbox.css'
                '@BonnesAdressesBundle/Resources/public/css/style.css'
            %}
                <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
            {% endstylesheets %}
        {% endblock %}

        {% block javascriptHeader %}
            {% javascripts
                '%kernel.root_dir%/../web/vendor/modernizr/modernizr.js'
				'https://api.tiles.mapbox.com/mapbox.js/v2.1.4/mapbox.js'
                filter='yui_js' %}
                <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </head>


    <body>
        {% block body %}{% endblock %}
        {% block javascripts %}
            <script>
              (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
              (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
              m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
              })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

              ga('create', 'UA-50457724-1', 'desbonnesadresses.fr');
              ga('send', 'pageview');
            </script>
        {% endblock %}
    </body>
</html>
